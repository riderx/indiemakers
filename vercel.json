{
  "headers": [
    {
      "source": "/_nuxt/(.*)",
      "headers" : [
        {
          "key" : "Cache-Control",
          "value" : "max-age=14400, s-maxage=1, stale-while-revalidate"
        }
      ]
    },
    {
      "source": "/robots.txt",
      "headers" : [
        {
          "key" : "Content-Type",
          "value" : "text/plain"
        }
      ]
    },
    {
      "source": "/rss.xml",
      "headers" : [
        {
          "key" : "Content-Type",
          "value" : "application/rss+xml"
        }
      ]
    },
    {
      "source": "/sitemap.xml",
      "headers" : [
        {
          "key" : "Cache-Type",
          "value" : "application/rss+xml"
        }
      ]
    }
  ],
  "rewrites": [
    { "source": "/sitemap", "destination": "/api/sitemap" },
    { "source": "/rss.xml", "destination": "/api/rss" },
    { "source": "/robots.txt", "destination": "/api/robots" }
  ]
}
